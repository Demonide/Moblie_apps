<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Victory">

    <Button
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:id="@+id/playAgain"
            android:textSize="24sp"
            android:gravity="center"

            android:background="#FF0000" android:textColor="#000000"
            tools:text="Новая Игра"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.689" android:onClick="PlayAgain"/>
    <TextView
            android:gravity="center|top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/Victory"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:textSize="36sp" tools:text="ПОРАЖЕНИЕ"

            app:layout_constraintHorizontal_bias="0.497" app:layout_constraintVertical_bias="0.138"
            android:layout_marginTop="36dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>